<% @topics.each do |topic| %>
  <%= link_to topic_path(topic) do %>
    <h4><strong><%= topic.title %></strong></h4>
  <% end %>
  <p><%= topic.content %></p>
  <%= link_to "編集", edit_topic_path(topic.id) %>
  <%= link_to "削除", topic_path(topic.id), method: :delete, data:{ confirm: '本当に削除しますか？'} %>
<% end %>
